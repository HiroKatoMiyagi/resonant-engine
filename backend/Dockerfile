FROM python:3.11-slim

WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# ğŸ†• ç‹¬ç«‹ãƒ¢ã‚¸ãƒ¥ãƒ¼ãƒ«ã‚’ã‚³ãƒ”ãƒ¼ï¼ˆãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆãƒ«ãƒ¼ãƒˆã‹ã‚‰ã®ç›¸å¯¾ãƒ‘ã‚¹ï¼‰
# Note: docker-compose.ymlã®contextãŒ..ï¼ˆãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆãƒ«ãƒ¼ãƒˆï¼‰ã§ã‚ã‚‹ã“ã¨ã‚’å‰æ
COPY memory_store/ ./memory_store/
COPY memory_lifecycle/ ./memory_lifecycle/
COPY context_assembler/ ./context_assembler/
COPY retrieval/ ./retrieval/

# Install dependencies
# Install dependencies
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ç‹¬ç«‹ãƒ¢ã‚¸ãƒ¥ãƒ¼ãƒ«ã‚’ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«ï¼ˆsetup.pyã‹ã‚‰ï¼‰
RUN pip install -e ./memory_store && \
    pip install -e ./memory_lifecycle

# Copy application
COPY backend/app/ ./app/

# Run
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
